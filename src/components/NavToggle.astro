<script is:inline>
  const initNavToggle = () => {
    const container = document.querySelector('.nav-toggle-container');
    const buttonsNodeList = document.querySelectorAll('.nav-toggle-btn');
    const buttons = Array.from(buttonsNodeList); // è½¬æ¢ä¸ºæ•°ç»„
    const slider = document.querySelector('.toggle-slider');
    
    if (!container || !buttons.length || !slider) {
      // å¦‚æœè¿˜æ²¡åŠ è½½ï¼Œå»¶è¿Ÿå†è¯•ä¸€æ¬¡
      setTimeout(initNavToggle, 100);
      return;
    }

    // è¿½è¸ªé¼ æ ‡Yåæ ‡å˜åŒ–
    let lastMouseY = 0;
    let mouseDirection = 0; // 1: å‘ä¸‹, -1: å‘ä¸Š
    let returnToPageSliderTimer = null;
    let hoveredButton = null; // è¿½è¸ªå½“å‰æ‚¬åœçš„æŒ‰é’®
    let sliderCurrentButton = null; // è¿½è¸ªæ»‘å—å½“å‰æ‰€åœ¨çš„æŒ‰é’®

    container.addEventListener('mousemove', (e) => {
      const currentY = e.clientY;
      if (lastMouseY !== 0) {
        mouseDirection = currentY > lastMouseY ? 1 : -1;
      }
      lastMouseY = currentY;
    });

    // æ ¹æ®å½“å‰è·¯å¾„ç¡®å®šæ´»è·ƒæŒ‰é’®
    const getActiveBtnTarget = () => {
      const path = window.location.pathname;
      if (path === '/') return 'blog';
      if (path.startsWith('/notes')) return 'notes';
      if (path.startsWith('/photos')) return 'photos';
      if (path.startsWith('/mc')) return 'mcgames';
      return 'blog';
    };

    const updateSlider = (button, withLiquidEffect = false) => {
      const rect = button.getBoundingClientRect();
      const containerRect = container.getBoundingClientRect();
      
      const leftPos = rect.left - containerRect.left;
      const rightPos = leftPos + rect.width;
      const containerWidth = containerRect.width;
      
      // ç¡®ä¿æ»‘å—ä¸è¶…å‡ºå®¹å™¨è¾¹ç•Œ
      const maxLeft = containerWidth - rect.width - 6; // å‡å»å³ä¾§padding
      const finalLeft = Math.min(leftPos, maxLeft);
      
      slider.style.left = finalLeft + 'px';
      slider.style.width = rect.width + 'px';
      slider.style.height = rect.height + 'px';
      
      // è®°å½•æ»‘å—å½“å‰æ‰€åœ¨çš„æŒ‰é’®
      sliderCurrentButton = button;
      
      // æ›´æ–°æŒ‰é’®å­—ä½“é¢œè‰²ï¼šæ»‘å—åœ¨å“ªä¸ªæŒ‰é’®ä¸Šï¼Œé‚£ä¸ªæŒ‰é’®çš„å­—ä½“åè½¬
      updateButtonTextColors(button);
      
      // æ°´ç å¾®åŠ¨æ•ˆæœ - è¿›å…¥æ—¶æŠµè§¦ï¼ˆåæ–¹å‘ï¼‰
      if (withLiquidEffect && mouseDirection !== 0) {
        const offset = -mouseDirection * 3; // åæ–¹å‘ç§»åŠ¨3pxï¼ˆæŠµè§¦ï¼‰
        slider.style.transform = `translateY(${offset}px)`;
        
        // 150msåå›å¼¹
        setTimeout(() => {
          slider.style.transform = 'translateY(0)';
        }, 150);
      }
    };

    // è®¡ç®—é¢œè‰²çš„äº®åº¦
    const getLuminance = (color) => {
      const rgb = getRGB(color);
      if (!rgb) return 0;
      
      // ä½¿ç”¨ç›¸å¯¹äº®åº¦å…¬å¼
      const [r, g, b] = [rgb.r, rgb.g, rgb.b].map(val => {
        val = val / 255;
        return val <= 0.03928 ? val / 12.92 : Math.pow((val + 0.055) / 1.055, 2.4);
      });
      
      return 0.2126 * r + 0.7152 * g + 0.0722 * b;
    };

    // è®¡ç®—ä¸¤ä¸ªé¢œè‰²çš„ç›¸ä¼¼åº¦ï¼ˆ0-1ï¼Œ1ä¸ºå®Œå…¨ç›¸åŒï¼‰
    const getColorSimilarity = (color1, color2) => {
      // å°†é¢œè‰²è½¬æ¢ä¸ºRGB
      const rgb1 = getRGB(color1);
      const rgb2 = getRGB(color2);
      
      if (!rgb1 || !rgb2) return 0;
      
      // è®¡ç®—æ¬§å‡ é‡Œå¾—è·ç¦»
      const distance = Math.sqrt(
        Math.pow(rgb1.r - rgb2.r, 2) +
        Math.pow(rgb1.g - rgb2.g, 2) +
        Math.pow(rgb1.b - rgb2.b, 2)
      );
      
      // æœ€å¤§è·ç¦»æ˜¯ sqrt(255^2 * 3) â‰ˆ 441.67
      // è¿”å›ç›¸ä¼¼åº¦ï¼ˆ0-1ï¼Œ1è¡¨ç¤ºå®Œå…¨ç›¸åŒï¼‰
      return 1 - (distance / 441.67);
    };

    // å°†CSSé¢œè‰²è½¬æ¢ä¸ºRGBå¯¹è±¡
    const getRGB = (color) => {
      const ctx = document.createElement('canvas').getContext('2d');
      ctx.fillStyle = color;
      const computed = ctx.fillStyle;
      
      // å¤„ç† rgba æ ¼å¼
      const match = computed.match(/rgba?\((\d+),\s*(\d+),\s*(\d+)/);
      if (match) {
        return {
          r: parseInt(match[1]),
          g: parseInt(match[2]),
          b: parseInt(match[3])
        };
      }
      
      return null;
    };

    // æ£€æµ‹å¯¼èˆªæ èƒŒåæ˜¯å¦æ˜¯å›¾ç‰‡èƒŒæ™¯
    const isOverImage = () => {
      // æ£€æŸ¥é¡µé¢ä¸­æ˜¯å¦å­˜åœ¨parallax-bgå…ƒç´ ï¼ˆèƒŒæ™¯å›¾ç‰‡ï¼‰
      const parallaxBg = document.querySelector('.parallax-bg');
      if (!parallaxBg) {
        console.log('isOverImage: æ²¡æœ‰æ‰¾åˆ°parallax-bgå…ƒç´ ');
        return false;
      }
      
      // è·å–èƒŒæ™¯å›¾çš„ä½ç½®å’Œé«˜åº¦
      const bgRect = parallaxBg.getBoundingClientRect();
      
      // è·å–å¯¼èˆªæ å®¹å™¨çš„ä½ç½®
      const containerRect = container.getBoundingClientRect();
      
      // æ”¹è¿›é€»è¾‘ï¼šæ£€æŸ¥å¯¼èˆªæ æ˜¯å¦åœ¨å¯è§çš„èƒŒæ™¯åŒºåŸŸå†…
      // å¦‚æœèƒŒæ™¯çš„bottomè¶…è¿‡å¯¼èˆªæ çš„topï¼Œä¸”èƒŒæ™¯çš„topå°äºå¯¼èˆªæ çš„bottomï¼Œåˆ™è¯´æ˜é‡å 
      const isOver = !(bgRect.bottom < containerRect.top || bgRect.top > containerRect.bottom);
      
      console.log('isOverImageè¯¦ç»†ä¿¡æ¯:', {
        bgTop: bgRect.top,
        bgBottom: bgRect.bottom,
        containerTop: containerRect.top,
        containerBottom: containerRect.bottom,
        isOver
