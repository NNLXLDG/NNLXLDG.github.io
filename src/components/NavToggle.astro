<div class="nav-toggle-container">
  <button class="nav-toggle-btn" data-target="blog">
    <span>ğŸ“ Blog</span>
  </button>
  <button class="nav-toggle-btn" data-target="notes">
    <span>ğŸ“‹ Notes</span>
  </button>
  <button class="nav-toggle-btn" data-target="photos">
    <span>ğŸ“· Photos</span>
  </button>
  <button class="nav-toggle-btn" data-target="mcgames">
    <span>ğŸ® MC Games</span>
  </button>
  <div class="toggle-slider"></div>
</div>

<script is:inline>
  const initNavToggle = () => {
    const container = document.querySelector('.nav-toggle-container');
    const buttonsNodeList = document.querySelectorAll('.nav-toggle-btn');
    const buttons = Array.from(buttonsNodeList); // è½¬æ¢ä¸ºæ•°ç»„
    const slider = document.querySelector('.toggle-slider');
    
    if (!container || !buttons.length || !slider) {
      // å¦‚æœè¿˜æ²¡åŠ è½½ï¼Œå»¶è¿Ÿå†è¯•ä¸€æ¬¡
      setTimeout(initNavToggle, 100);
      return;
    }

    // æ ¹æ®å½“å‰è·¯å¾„ç¡®å®šæ´»è·ƒæŒ‰é’®
    const getActiveBtnTarget = () => {
      const path = window.location.pathname;
      if (path === '/') return 'blog';
      if (path.startsWith('/notes')) return 'notes';
      if (path.startsWith('/photos')) return 'photos';
      if (path.startsWith('/mc')) return 'mcgames';
      return 'blog';
    };

    const updateSlider = (button) => {
      const rect = button.getBoundingClientRect();
      const containerRect = container.getBoundingClientRect();
      
      slider.style.left = (rect.left - containerRect.left) + 'px';
      slider.style.width = rect.width + 'px';
      slider.style.height = rect.height + 'px';
    };

    const navigate = (target) => {
      // æ·»åŠ æ·¡å‡ºæ•ˆæœ
      container.classList.add('fade-out');
      
      setTimeout(() => {
        // è§¦å‘å¯¼èˆª
        let href = '/';
        if (target === 'notes') href = '/notes';
        else if (target === 'photos') href = '/photos';
        else if (target === 'mcgames') href = '/mc';
        
        window.location.href = href;
      }, 300);
    };

    buttons.forEach((button) => {
      button.addEventListener('click', () => {
        const target = button.getAttribute('data-target');
        const currentTarget = getActiveBtnTarget();
        
        if (target === currentTarget) return;

        // ç§»é™¤æ‰€æœ‰æ´»è·ƒçŠ¶æ€
        buttons.forEach(btn => btn.classList.remove('active'));
        
        // æ·»åŠ æ´»è·ƒçŠ¶æ€
        button.classList.add('active');

        // æ›´æ–°æ»‘å—ä½ç½®
        updateSlider(button);

        // é¡µé¢è¿‡æ¸¡æ•ˆæœ
        navigate(target);
      });

      // é¼ æ ‡æ‚¬åœå¸é™„æ•ˆæœ
      button.addEventListener('mouseenter', () => {
        updateSlider(button);
      });
    });

    // åˆå§‹åŒ–æ´»è·ƒæŒ‰é’®å’Œæ»‘å—
    const currentTarget = getActiveBtnTarget();
    
    // å»¶è¿Ÿåæ‰¾åˆ°å¯¹åº”çš„æŒ‰é’®å¹¶æ›´æ–°æ»‘å—
    const initializeSlider = () => {
      const buttonToUpdate = buttons.find(btn => btn.getAttribute('data-target') === currentTarget);
      if (buttonToUpdate) {
        buttonToUpdate.classList.add('active');
        updateSlider(buttonToUpdate);
      }
    };
    
    // å»¶è¿Ÿ 200ms ç¡®ä¿å…ƒç´ å®Œå…¨æ¸²æŸ“
    setTimeout(initializeSlider, 200);
  };

  // åœ¨è„šæœ¬åŠ è½½å®Œç«‹å³å°è¯•åˆå§‹åŒ–
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initNavToggle);
  } else {
    initNavToggle();
  }
</script>

