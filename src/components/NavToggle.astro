      return isOver;
    };

    // æ›´æ–°æŒ‰é’®å­—ä½“é¢œè‰²
    const updateButtonTextColors = (activeButton) => {
      const isDarkMode = document.documentElement.getAttribute('data-theme') === 'dark';
      const overImage = isOverImage();
      const currentPage = getActiveBtnTarget(); // è·å–å½“å‰é¡µé¢
      const isBlogPage = currentPage === 'blog'; // åªæœ‰blogé¡µé¢ç”¨çº¯è‰²
      
      console.log('updateButtonTextColors:', {
        isDarkMode,
        overImage,
        currentPage,
        isBlogPage,
        activeButtonTarget: activeButton?.getAttribute('data-target')
      });
      
      buttons.forEach((btn) => {
        if (btn === activeButton) {
          // æ´»è·ƒæŒ‰é’®ï¼ˆåœ¨æ»‘å—ä¸Šï¼‰ï¼šå›ºå®šç”¨çº¯ç™½æˆ–çº¯é»‘
          if (isDarkMode) {
            btn.style.color = 'rgba(255, 255, 255, 0.95)'; // æ·±è‰²æ¨¡å¼ä¸‹ç”¨ç™½è‰²æ–‡å­—
          } else {
            btn.style.color = 'rgba(20, 20, 30, 0.95)'; // æµ…è‰²æ¨¡å¼ä¸‹ç”¨é»‘è‰²æ–‡å­—
          }
        } else {
          // éæ´»è·ƒæŒ‰é’®ï¼šåªæœ‰blogé¡µé¢æ‰æ ¹æ®æ˜¯å¦åœ¨å›¾ç‰‡ä¸Šé€‰æ‹©é¢œè‰²ï¼Œå…¶ä»–é¡µé¢ä¸€å¾‹ç”¨ç°è‰²
          if (isBlogPage && overImage) {
            // Blogé¡µé¢ä¸”åœ¨å›¾ç‰‡ä¸Šï¼šç”¨çº¯é»‘æˆ–çº¯ç™½ï¼Œå¯¹æ¯”åº¦æ›´å¥½
            if (isDarkMode) {
              btn.style.color = '#000000'; // æ·±è‰²æ¨¡å¼ç”¨çº¯é»‘
            } else {
              btn.style.color = '#ffffff'; // æµ…è‰²æ¨¡å¼ç”¨çº¯ç™½
            }
            console.log(`æŒ‰é’® ${btn.getAttribute('data-target')} è®¾ç½®ä¸ºçº¯è‰²`);
          } else {
            // å…¶ä»–æ‰€æœ‰æƒ…å†µï¼šç”¨ç°è‰²
            btn.style.color = '#808080';
            console.log(`æŒ‰é’® ${btn.getAttribute('data-target')} è®¾ç½®ä¸ºç°è‰²`);
          }
        }
      });
    };

    const sliderLeaveEffect = () => {
      // ç¦»å¼€æ—¶ç•™æ‹ï¼ˆé¡ºç€æ–¹å‘ï¼‰
      if (mouseDirection !== 0) {
        const offset = mouseDirection * 3; // é¡ºç€æ–¹å‘ç§»åŠ¨3pxï¼ˆç•™æ‹ï¼‰
        slider.style.transform = `translateY(${offset}px)`;
        
        // 200msåå›å¼¹
        setTimeout(() => {
          slider.style.transform = 'translateY(0)';
        }, 200);
      }
    };

    const navigate = (target) => {
      // æ·»åŠ æ·¡å‡ºæ•ˆæœ
      container.classList.add('fade-out');
      
      setTimeout(() => {
        // è§¦å‘å¯¼èˆª
        let href = '/';
        if (target === 'notes') href = '/notes';
        else if (target === 'photos') href = '/photos';
        else if (target === 'mcgames') href = '/mc';
        
        window.location.href = href;
      }, 300);
    };

    // è¿”å›åˆ°å½“å‰é¡µé¢æŒ‰é’®çš„æ»‘å—ä½ç½®
    const returnSliderToCurrentPage = () => {
      const currentTarget = getActiveBtnTarget();
      const buttonToReturn = buttons.find(btn => btn.getAttribute('data-target') === currentTarget);
      if (buttonToReturn) {
        // ä¸´æ—¶æ”¹å˜è¿‡æ¸¡æ•ˆæœä¸º ease-outï¼ˆå…ˆå¿«åæ…¢ï¼‰
        const originalTransition = slider.style.transition;
        slider.style.transition = 'all 0.6s cubic-bezier(0.16, 1, 0.3, 1), transform 0.6s cubic-bezier(0.16, 1, 0.3, 1)';
        
        updateSlider(buttonToReturn, false);
        
        // åŠ¨ç”»å®Œæˆåæ¢å¤åŸå§‹è¿‡æ¸¡æ•ˆæœ
        setTimeout(() => {
          slider.style.transition = originalTransition;
        }, 600);
      }
    };

    buttons.forEach((button) => {
      button.addEventListener('click', () => {
        const target = button.getAttribute('data-target');
        const currentTarget = getActiveBtnTarget();
        
        if (target === currentTarget) return;

        // ç§»é™¤æ‰€æœ‰æ´»è·ƒçŠ¶æ€
        buttons.forEach(btn => btn.classList.remove('active'));
        
        // æ·»åŠ æ´»è·ƒçŠ¶æ€
        button.classList.add('active');

        // æ›´æ–°æ»‘å—ä½ç½®
        updateSlider(button);

        // é¡µé¢è¿‡æ¸¡æ•ˆæœ
        navigate(target);
      });

      // é¼ æ ‡æ‚¬åœå¸é™„æ•ˆæœ - æ·»åŠ æ°´ç æ•ˆæœ
      button.addEventListener('mouseenter', () => {
        hoveredButton = button; // è®°å½•æ‚¬åœçš„æŒ‰é’®
        // æ¸…é™¤ä¹‹å‰çš„è¿”å›è®¡æ—¶å™¨
        if (returnToPageSliderTimer) {
          clearTimeout(returnToPageSliderTimer);
          returnToPageSliderTimer = null;
        }
        updateSlider(button, true);
      });

      // é¼ æ ‡ç¦»å¼€æ—¶çš„ç•™æ‹æ•ˆæœ
      button.addEventListener('mouseleave', () => {
        hoveredButton = null; // æ¸…é™¤æ‚¬åœè®°å½•
        sliderLeaveEffect();
      });
    });

    // å®¹å™¨æ•´ä½“ç¦»å¼€æ—¶
    container.addEventListener('mouseleave', () => {
      hoveredButton = null; // æ¸…é™¤æ‚¬åœè®°å½•
      slider.style.transform = 'translateY(0)';
      
      // æ¸…é™¤ä¹‹å‰çš„è®¡æ—¶å™¨
      if (returnToPageSliderTimer) {
        clearTimeout(returnToPageSliderTimer);
      }
      
      // 3ç§’åå¦‚æœé¼ æ ‡è¿˜ä¸åœ¨å®¹å™¨å†…ï¼Œåˆ™è¿”å›åˆ°å½“å‰é¡µé¢æŒ‰é’®
      returnToPageSliderTimer = setTimeout(() => {
        returnSliderToCurrentPage();
      }, 3000);
    });

    // é¼ æ ‡é‡æ–°è¿›å…¥å®¹å™¨æ—¶ï¼Œå–æ¶ˆè¿”å›è®¡æ—¶å™¨
    container.addEventListener('mouseenter', () => {
      if (returnToPageSliderTimer) {
        clearTimeout(returnToPageSliderTimer);
        returnToPageSliderTimer = null;
      }
    });

    // ç›‘å¬ä¸»é¢˜å˜åŒ–ï¼Œæ›´æ–°æŒ‰é’®æ–‡å­—é¢œè‰²
    const observer = new MutationObserver(() => {
      const currentTarget = getActiveBtnTarget();
      const buttonToUpdate = buttons.find(btn => btn.getAttribute('data-target') === currentTarget);
      if (buttonToUpdate) {
        updateButtonTextColors(buttonToUpdate);
      }
    });

    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ['data-theme']
    });

    // ç›‘å¬æ»šåŠ¨ï¼Œæ›´æ–°æŒ‰é’®æ–‡å­—é¢œè‰²ï¼ˆå› ä¸ºå¯èƒ½ä»å›¾ç‰‡åŒºåŸŸæ»šåŠ¨åˆ°çº¯è‰²åŒºåŸŸï¼‰
    window.addEventListener('scroll', () => {
      const currentTarget = getActiveBtnTarget();
      const isDarkMode = document.documentElement.getAttribute('data-theme') === 'dark';
      const overImage = isOverImage();
      const isBlogPage = currentTarget === 'blog';
      
      buttons.forEach((btn) => {
        if (btn === hoveredButton) {
          // å¦‚æœæŒ‰é’®è¢«æ‚¬åœï¼Œä¸è¦æ”¹å˜å®ƒçš„é¢œè‰²
          return;
        }
        
        const activeButton = buttons.find(b => b.getAttribute('data-target') === currentTarget);
        const sliderIsOnCurrentButton = sliderCurrentButton === activeButton;
        
        if (btn === activeButton) {
          // æ´»è·ƒæŒ‰é’®ï¼šåªæœ‰æ»‘å—åœ¨å®ƒä¸Šé¢æ—¶æ‰æ˜¾ç¤ºçº¯è‰²ï¼Œå¦åˆ™æ˜¾ç¤ºç°è‰²
          if (sliderIsOnCurrentButton) {
            if (isDarkMode) {
              btn.style.color = 'rgba(255, 255, 255, 0.95)';
            } else {
              btn.style.color = 'rgba(20, 20, 30, 0.95)';
            }
          } else {
            btn.style.color = '#808080';
          }
        } else {
          // éæ´»è·ƒéæ‚¬åœæŒ‰é’®ï¼šåªæœ‰blogé¡µé¢ä¸”åœ¨å›¾ç‰‡ä¸Šæ—¶æ‰ç”¨çº¯è‰²ï¼Œå…¶ä»–æƒ…å†µç”¨ç°è‰²
          if (isBlogPage && overImage) {
            if (isDarkMode) {
              btn.style.color = '#000000';
            } else {
              btn.style.color = '#ffffff';
            }
          } else {
            btn.style.color = '#808080';
          }
        }
      });
    }, { passive: true });

    // åˆå§‹åŒ–æ´»è·ƒæŒ‰é’®å’Œæ»‘å—
    const currentTarget = getActiveBtnTarget();
    
    // å»¶è¿Ÿåæ‰¾åˆ°å¯¹åº”çš„æŒ‰é’®å¹¶æ›´æ–°æ»‘å—
    const initializeSlider = () => {
      const buttonToUpdate = buttons.find(btn => btn.getAttribute('data-target') === currentTarget);
      if (buttonToUpdate) {
        buttonToUpdate.classList.add('active');
        
        // æš‚æ—¶ç¦ç”¨æ»‘å—çš„è¿‡æ¸¡æ•ˆæœï¼Œé¿å…åˆå§‹åŒ–æ—¶çš„è·³è·ƒ
        slider.style.transition = 'none';
        
        updateSlider(buttonToUpdate);
        
        // å¼ºåˆ¶é‡æ’åæ¢å¤è¿‡æ¸¡
        void slider.offsetHeight; // è§¦å‘reflow
        slider.style.transition = ''; // æ¢å¤åˆ°CSSå®šä¹‰çš„æ ·å¼
      }
    };
    
    // å»¶è¿Ÿ 50ms åˆå§‹åŒ–æ»‘å—ä½ç½®ï¼Œä¸æ›´æ–°é¢œè‰²
    setTimeout(initializeSlider, 50);
    
    // ä½¿ç”¨ requestAnimationFrame æŒç»­æ£€æŸ¥ï¼Œç›´åˆ°èƒ½æ­£ç¡®è¯†åˆ«åˆ°å›¾ç‰‡
    const updateColorWhenReady = () => {
      const buttonToUpdate = buttons.find(btn => btn.getAttribute('data-target') === currentTarget);
      if (buttonToUpdate) {
        const overImage = isOverImage();
        // å½“èƒ½æ­£ç¡®è¯†åˆ«åˆ°å›¾ç‰‡æ—¶ï¼Œæˆ–è€…å·²ç»ç­‰å¾…è¶³å¤Ÿé•¿çš„æ—¶é—´æ—¶ï¼Œæ›´æ–°é¢œè‰²å¹¶åœæ­¢æ£€æŸ¥
        if (overImage) {
          updateButtonTextColors(buttonToUpdate);
        } else {
          // ç»§ç»­ç­‰å¾…
          requestAnimationFrame(updateColorWhenReady);
        }
      }
    };
    
    // å»¶è¿Ÿ 100ms å¼€å§‹æ£€æŸ¥ï¼Œç¡®ä¿åˆå§‹åŒ–å®Œæˆ
    setTimeout(() => {
      requestAnimationFrame(updateColorWhenReady);
    }, 100);
  };

  // åœ¨è„šæœ¬åŠ è½½å®Œç«‹å³å°è¯•åˆå§‹åŒ–
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initNavToggle);
