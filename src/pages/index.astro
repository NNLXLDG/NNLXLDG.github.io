---
import BaseLayout from "../layouts/BaseLayout.astro";
import NavToggle from "../components/NavToggle.astro";
---

<BaseLayout title="Home">
  <!-- 背景图片层 -->
  <div class="parallax-bg" style="background-image: url('/bg_photos/front.jpg');"></div>

  <!-- 第一屏：内容层 -->
  <section class="hero">
    <h1>Welcome to Xie's Blog</h1>
  </section>

  <!-- 固定导航按钮 -->
  <NavToggle />

  <!-- 第二屏：纯色页面 -->
  <section class="solid-screen"></section>
</BaseLayout>

<script>
  // 背景图片视差滚动效果
  const parallaxBg = document.querySelector('.parallax-bg');
  if (parallaxBg) {
    // 立即设置初始transform，防止任何跳变
    parallaxBg.style.transform = 'translate3d(0, 0, 0)';
    
    // 只在滚动时更新
    window.addEventListener('scroll', () => {
      const scrolled = window.scrollY;
      parallaxBg.style.transform = `translate3d(0, -${scrolled}px, 0)`;
    }, { passive: true });
  }

  // 设置首页导航按钮状态
  const initHomeNavStatus = () => {
    const buttons = document.querySelectorAll('.nav-toggle-btn');
    buttons.forEach(btn => btn.classList.remove('active'));
  };

  initHomeNavStatus();
</script>

<style>
  .hero {
    padding: 60px 0 40px;
    text-align: center;
    position: relative;
    z-index: 2;
    height: 100vh;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .hero h1 {
    font-size: 48px;
    margin: 0 0 16px;
    background: linear-gradient(135deg, var(--text), rgba(255, 255, 255, 0.7));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero p {
    margin: 0;
    max-width: 70ch;
    margin: 0 auto;
    font-size: 18px;
    color: var(--muted);
  }

  /* 第二屏纯色页面 */
  .solid-screen {
    min-height: 100vh;
    width: 100vw;
    background-color: var(--bg);
    position: relative;
    z-index: 2;
    margin-left: calc(-50vw + 50%);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 640px) {
    .hero h1 {
      font-size: 32px;
    }

    .hero p {
      font-size: 16px;
    }

    .nav-section {
      padding: 60px 0 30px;
    }
  }
</style>